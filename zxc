    <div id="chat" class="flex-1 overflow-y-auto p-4 space-y-4 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-slate-900 to-black">
        <div class="bg-slate-800/50 p-3 rounded-2xl rounded-bl-none border border-slate-700 max-w-[85%] text-sm">
            –ò–Ω—Ç–µ—Ä—Ñ–µ–π—Å –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω. –ñ–¥—É —É–∫–∞–∑–∞–Ω–∏–π... üòà
        </div>
    </div>

    <div class="p-4 glass border-t border-slate-800">
        <div class="flex gap-2">
            <input id="inp" type="text" placeholder="–í–≤–µ–¥–∏—Ç–µ –∫–æ–º–∞–Ω–¥—É..." class="flex-1 bg-slate-900 border border-slate-700 rounded-xl px-4 py-3 text-sm focus:outline-none focus:border-sky-500 transition-all">
            <button onclick="send()" class="bg-sky-600 px-5 py-3 rounded-xl font-bold active:scale-95 transition-transform shadow-lg shadow-sky-900/20">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
                </svg>
            </button>
        </div>
    </div>

    <script>
        const tg = window.Telegram.WebApp;
        tg.expand();
        tg.ready();

        function send() {
            const i = document.getElementById('inp');
            const chat = document.getElementById('chat');
            if(!i.value) return;
            
            chat.innerHTML += `<div class="bg-sky-900/40 p-3 rounded-2xl rounded-br-none border border-sky-700 max-w-[85%] ml-auto text-right text-sm">${i.value}</div>`;
            i.value = '';
            chat.scrollTop = chat.scrollHeight;
        }
    </script>
